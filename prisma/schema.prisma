generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tag {
  id            Int         @id @default(autoincrement())
  key           String
  value         String

  error         Error       @relation(fields: [errorId], references: [id])
  errorId       String
}

model Error {
  id            String      @id @default(nanoid(7))
  createdAt     DateTime    @default(now())
  application   String
  kind          String
  severity      String
  userID        String
  message       String
  tags          Tag[]
}


model User {
  id            String      @id @default(cuid())
  username      String
  password      String
}


